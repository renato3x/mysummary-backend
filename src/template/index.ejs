<!DOCTYPE html>
<html>
  <head>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap');

      * {
        font-family: 'Roboto', sans-serif;
      }

      body {
        margin: 0;
        padding: 0 30px;
      }

      body p {
        text-align: justify;
      }

      body h1 {
        margin: .4em 0;
      }
    </style>
  </head>
  <body>
    <h1><%= title %></h1>

    <hr>
    <% textsArray.forEach(text => { %>
      <p>
        <%= text %>
      </p>
    <% }) %>
  </body>
</html>